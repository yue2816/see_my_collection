<!DOCTYPE html>
<html>
  <head>
    <title>SeeMyCollection</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--FontAwesome導入の記述-->
    <script src="https://kit.fontawesome.com/8f2160af5d.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #C5CAE9">
        <div class="container">
          <a class="navbar-brand" href="/">
            <h2 class="text-dark">
              <i class="fa-solid fa-shapes"></i>
              See My Collection
            </h2>
          </a>

          <div>
            <!--管理者ログイン後ヘッダー-->
            <% if admin_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to "ユーザー一覧", admin_homes_top_path, class:'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:'nav-link text-dark' %>
              </li>
            </ul>

            <!--ユーザーログイン後ヘッダー-->
            <% elsif user_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to posts_path, class:'nav-link text-dark' do %>
                  <i class="fa-solid fa-book-open"></i>
                  投稿一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to users_path, class:'nav-link text-dark' do %>
                  <i class="fa-solid fa-user"></i>
                  ユーザー一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to likes_user_path(current_user.id), class:'nav-link text-dark' do %>
                  <i class="fa-solid fa-heart"></i>
                  いいね一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to user_followings_path(current_user.id), class:'nav-link text-dark' do %>
                  <i class="fa-solid fa-handshake-angle"></i>
                  フォロー一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class:'nav-link text-dark' do %>
                  <i class="fa-solid fa-right-from-bracket"></i>
                  ログアウト
                <% end %>
              </li>
            </ul>

            <!--ログイン前ヘッダー-->
            <% else %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to root_path, class:'nav-link text-dark' do %>
                  <i class="fa-solid fa-house-chimney-window"></i>
                  Home
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to homes_about_path, class:'nav-link text-dark' do %>
                  <i class="fa-solid fa-book-open"></i>
                  About
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class:'nav-link text-dark' do %>
                  <i class="fa-solid fa-user-plus"></i>
                  新規登録
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class:'nav-link text-dark' do %>
                  <i class="fa-solid fa-right-to-bracket"></i>
                  ログイン
                <% end %>
              </li>
            </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
