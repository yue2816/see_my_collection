<div class="container pt-3">
  <%= flash[:notice] %>

  <div class="row">
    <div class="col-lg-6">
      <h2>
        <i class="fa-solid fa-book-open"></i>
        投稿一覧ページ
      </h2>
    </div>

    <div class="col-lg-2 text-right">
      <p>
        <%= link_to new_post_path, class:"btn btn-outline-success btn-sm" do %>
          <i class="fa-solid fa-plus"></i>
          新規投稿
        <% end %>
      </p>
    </div>

    <div class="col-lg-4 text-right">
      <%= form_with url: posts_path, local: true, method: :get do |f| %>
        <%= f.text_field :word, placeholder:"タイトル名" %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
        <%= f.submit "検索", class: "btn btn-primary btn-sm" %>
      <% end %>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-4 g-4 pt-3">
  <% @posts.each do |post| %>
    <div class="card h-100">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.post_image, class:"card-img-top" %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-3">
            <%= image_tag post.user.get_image(45,45), class:"rounded-circle mt-1" %>
          </div>
          <div class="col-9">
            <p class="card-title"><%= post.title %></p>
            <p class="card-text">
              <i class="fa-solid fa-user"></i>
              <%= post.user.name %> |
              <i class="fa-solid fa-heart" style="color: #ff0000;"></i>
              <%= post.likes.count %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>