<div class="container pt-3">

  <h3 class="pb-2">
    <i class="fa-solid fa-right-to-bracket"></i>
    ログイン
  </h3>

  <%= form_with model: @user, url: session_path(resource_name) do |f| %>
    <form>
      <div class="form-group">
        <label>メールアドレス</label><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control col-lg-5" %>
      </div>

      <div class="form-group">
        <label>パスワード</label><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control col-lg-5" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div>
    </form>
  <% end %>

  <p class="pt-4">
    登録がお済みでない方は
    <%= link_to "こちら", new_user_registration_path %>
  </p>
</div>
